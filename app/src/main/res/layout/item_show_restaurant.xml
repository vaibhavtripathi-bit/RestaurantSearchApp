<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="@dimen/app_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/restaurant_icon"
        android:adjustViewBounds="true"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:scaleType="centerCrop"
        android:src="@color/cardview_dark_background"
        app:layout_constraintDimensionRatio="W,1:2.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurant_name"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_icon"
        tools:text="Popular" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/restaurant_address"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:maxLines="4"
        android:textSize="16sp"
        android:typeface="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name"
        tools:text="address" />

    <TextView
        android:id="@+id/restaurant_type"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="12sp"
        android:typeface="normal"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_address"
        tools:text="Pizza" />

    <TextView
        android:id="@+id/restaurant_neighborhood"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:maxLines="1"
        android:textSize="12sp"
        android:typeface="normal"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_type"
        tools:text="Manhattan" />

    <TextView
        android:id="@+id/restaurant_operating_hour"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:maxLines="1"
        android:textSize="12sp"
        android:typeface="normal"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_neighborhood"
        tools:text="Monday: 5:30pm - 11:00 pm" />

    <TextView
        android:id="@+id/restaurant_top_review"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:maxLines="4"
        android:textSize="12sp"
        android:typeface="normal"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/restaurant_name"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_operating_hour"
        tools:text="Monday: 5:30pm - 11:00 pm" />

</androidx.constraintlayout.widget.ConstraintLayout>